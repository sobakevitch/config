bindsym $mod+s workspace next_on_output

# new workspace
bindsym $mod+n exec --no-startup-id ~/.config/i3/empty_workspace.py

# Spotify
bindcode $mod+59 exec --no-startup-id "~/.bin/sp prev"
bindcode $mod+60 exec --no-startup-id "~/.bin/sp next"
bindcode $mod+61 exec --no-startup-id "~/.bin/sp play"

# renaming workspace
bindsym $mod+m exec i3-input -F 'rename workspace to "%s"' -P 'New name for this workspace: '

# moving workspace to the other output
bindcode $mod+Control+18 "move workspace to output left"
bindcode $mod+Control+19 "move workspace to output up"
bindcode $mod+Control+21 "move workspace to output right"
bindcode $mod+Control+20 "move workspace to output down"

# Music
bindsym XF86AudioRaiseVolume exec --no-startup-id "/usr/bin/amixer set Master 9%+"
bindsym XF86AudioLowerVolume exec --no-startup-id "/usr/bin/amixer set Master 9%-"
bindsym XF86AudioMute exec --no-startup-id "/usr/bin/amixer set Master toggle"
bindsym XF86AudioMicMute exec --no-startup-id "/usr/bin/amixer set Capture toggle"

# Sreen brightness controls
bindsym XF86MonBrightnessDown exec --no-startup-id "/usr/local/bin/brightness.sh -dec 10"
bindsym XF86MonBrightnessUp exec --no-startup-id "/usr/local/bin/brightness.sh -inc 10"

# switch layout
